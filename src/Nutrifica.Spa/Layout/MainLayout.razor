@layout BaseLayout
@using Nutrifica.Spa.Shared.NavMenu
@using Nutrifica.Spa.Shared.AppBar
@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton 
            Icon="@Icons.Material.Filled.Menu" 
            Color="Color.Inherit" 
            Edge="Edge.Start" 
            OnClick="@((e) => DrawerToggle())"/>
        
        <MudText
            Typo="Typo.h5"
            Class="ml-3">
            Nutrifica
        </MudText>
        
        <MudSpacer/>
        
        <NotificationBellComponent/>
        
        <AvatarProfileComponent/>
    </MudAppBar>
    
    <MudDrawer 
        @bind-Open="_drawerOpen" 
        ClipMode="DrawerClipMode.Always" 
        Elevation="2">
        <NavMenuComponent/>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}